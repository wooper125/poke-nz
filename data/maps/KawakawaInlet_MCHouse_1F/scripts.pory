mapscripts KawakawaInlet_MCHouse_1F_MapScripts {
    MAP_SCRIPT_ON_LOAD: KawakawaInlet_MCHouse_1F_OnLoad
    MAP_SCRIPT_ON_TRANSITION: KawakawaInlet_MCHouse_1F_OnTransition
    MAP_SCRIPT_ON_FRAME_TABLE [
        VAR_KAWAKAWA_INTRO_STATE, 1: KawakawaInlet_MCHouse_1F_EventScript_MomGoodMorning
        VAR_KAWAKAWA_INTRO_STATE, 4: KawakawaInlet_MCHouse_1F_EventScript_DadAfterFestival
        VAR_KAWAKAWA_INTRO_STATE, 6: KawakawaInlet_MCHouse_1F_EventScript_MomGoodMorning2
    ]
}

script KawakawaInlet_MCHouse_1F_OnLoad {

}

script KawakawaInlet_MCHouse_1F_OnTransition {

}

script KawakawaInlet_MCHouse_1F_EventScript_Mom {
	lock
	faceplayer
    if (var(VAR_KAWAKAWA_INTRO_STATE) == 2) {
        msgbox(KawakawaInlet_MCHouse_1F_Text_MomGoOn)
    } elif (var(VAR_KAWAKAWA_INTRO_STATE) == 5) {
        msgbox(KawakawaInlet_MCHouse_1F_Text_MomGetSomeRest)
    } else {
        goto(PlayersHouse_1F_EventScript_MomHealsParty)
    } 
	release
    end
}

script KawakawaInlet_MCHouse_1F_EventScript_Dad {
	lock
	faceplayer
    if (var(VAR_KAWAKAWA_INTRO_STATE) == 5) {
        msgbox(KawakawaInlet_MCHouse_1F_Text_DadGetSomeRest)
    } else {
        msgbox(KawakawaInlet_MCHouse_1F_Text_DadHeyChamp)
    }
	release
    end
}

script KawakawaInlet_MCHouse_1F_EventScript_MomGoodMorning {
    lockall
    playse(SE_PIN)
    applymovement(1, Common_Movement_ExclamationMark)
    waitmovement(0)
    msgbox(KawakawaInlet_MCHouse_1F_Text_MomGoodMorning)
    closemessage
    applymovement(OBJ_EVENT_ID_PLAYER, KawakawaInlet_MCHouse_1F_Movement_PlayerApproachTable)
    waitmovement(0)
    msgbox(KawakawaInlet_MCHouse_1F_Text_MomWhatDayIsIt)
    closemessage
    addvar(VAR_KAWAKAWA_INTRO_STATE, 1) # VAR_KAWAKAWA_INTRO_STATE = 2
    releaseall
    end
}

text KawakawaInlet_MCHouse_1F_Text_MomGoodMorning {
    format("MOM: Good morning, sleepyhead!")
}

movement KawakawaInlet_MCHouse_1F_Movement_PlayerApproachTable {
    walk_down * 2
	walk_left * 3
    walk_down
    face_left
}

